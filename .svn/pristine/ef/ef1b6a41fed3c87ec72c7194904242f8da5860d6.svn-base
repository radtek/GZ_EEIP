*{
   margin: 0;
   padding: 0;
   font-family: "Microsoft Yahei";
}
.switchBtn{
	width:82px;
	height:30px;
	overflow:hidden;
	border:1px solid #ccc;
	position:relative;
	border-radius:4px;
}
.switchAnimate{
	width:130px;
	height:28px;
	position:absolute;
	top:0;
	left:-50px;
	border-radius:4px;
}
.switchAnimate span{
	line-height:28px;
	display:block;
	float:left;
}
.onBtn{
	width:50px;
	color:#fff;
	background-color:#337ab7;
	text-align:center;
	border-bottom-left-radius: 4px;
	border-top-left-radius: 4px;
	cursor: pointer;
}
.blank{
	width:30px;
	border-radius:4px;
}
.offBtn{
	width:50px;
	color:#333;
	background-color:#eee;
	text-align:center;
	border-bottom-right-radius: 4px;
	border-top-right-radius: 4px;
	cursor: pointer;
}