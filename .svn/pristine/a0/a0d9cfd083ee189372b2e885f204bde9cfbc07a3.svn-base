*{margin: 0;padding: 0;font-family: "Microsoft Yahei";}
.message-bar{
	overflow: hidden;
	position: relative;
	width: 25%;
	float: left;
	height: 100%;
    padding: 0 10px;
}
.more{
	position: absolute;
	bottom: 0;
	right: 10px;
	width: 40px;
	height: 40px;
	cursor: pointer;
}
.more i{
	position: absolute;
	top: 0;
	right: 0;
	z-index: 99;
	width: 0;
	height: 0;
	border-width: 20px;
	border-style: solid;
	border-color: #fff #ccc #ccc #fff;
	border-color: transparent #ccc #ccc transparent;
}
.more span{
	position: absolute;
	bottom: 8px;
	right: 3px;
	z-index: 999;
	color: #666;
	font-size: 20px;
	width: 20px;
	height: 20px;
	text-align: center;
	font-weight: bolder;
	display: inline-block;
}
.dialog-box{
	width: 100%;
    height: 100%;
    padding: 5px;
    overflow: auto;
    border: 1px solid #ccc;
}
.dialog-box::-webkit-scrollbar{
	width:8px;
	height:8px;
	background-color:#e5e5e5;
	-webkit-border-radius:4px;
	-moz-border-radius:4px;
	border-radius:4px;
}
.dialog-box::-webkit-scrollbar-thumb{
	background-color:#ccc;
	-webkit-border-radius:4px;
	-moz-border-radius:4px;
	border-radius:4px;
}
.list{
	width: 100%;
	padding: 0 14px;
	position: relative;
	margin-bottom: 15px;
}
.direction{
	position: absolute;
	top: 28px;
	width: 15px;
	height: 30px;
	display: inline-block;
}
.left .direction{
	left: 0;
	background: url(../images/lr.png) no-repeat left top;
}
.right .direction{
	right: 0;
	background: url(../images/lr.png) no-repeat right top;
}
.list-time{
	font-size: 12px;
	text-align: right;
	margin-bottom: 5px;
}
.content{
	width: 100%;
	padding: 5px 10px;
	border: 1px solid #ccc;
	border-radius: 4px;
}
.bottomP{
	width: 100%;
	margin-bottom: 0;
	line-height: 20px;
}