@font-face {
  font-family: "Microsoft Yahei";
  src: url('../../fonts/msyh.ttf');     
}
* {
	margin: 0;
	padding: 0;
	font-family: "Microsoft Yahei";
}
input:focus, button:focus, textarea:focus, select:focus{
	outline: none;
	-webkit-tap-highlight-color: rgba(0,0,0,0);
}
input:-webkit-autofill {
	/* color : #fff !important; */
	-webkit-box-shadow : 0 0 0px 1000px #1F2C47 inset ;
	box-shadow : 0 0 0px 1000px #1F2C47 inset ;
	border : 1px solid #A7A7A7 !important;
	-webkit-text-fill-color: #fff;
}


/*min-width < screen  屏幕宽度大于min-width*/  
@media screen and (min-width: 1600px) { 
    .signinBg {
    	background: url(../../images/eeip/loginBgImg4.png) repeat left top;
		background-size: 40px;
	}
	.login-content{
	    /* padding-top: 100px; */
	}
	.logo-img{
		width: 35%;
	}
	.system-name p{
	    font-size: 30px;
	}
	.input-content span{
	    top: 54px;
    	font-size: 16px;
	}
	.input-content input{
	    height: 50px;
	    font-size:16px;
	}
	.login-btn .btn{
		height:45px;
		font-size:18px;
	}
}
/*min-width < screen < max-width 屏幕宽度大于min-width，小于max-width*/
@media (min-width: 1024px) and (max-width: 1600px) { 
    .signinBg{
    	background: url(../../images/eeip/loginBgImg4.png) repeat left top;
		background-size: 40px;
	}
	.login-content{
	    /* padding-top: 40px; */
	}
	.logo-img{
		width: 30%;
	}
	.system-name p{
	    font-size: 20px;
	}
	.input-content span{
	    top: 51px;
	    font-size: 14px;
	}
	.input-content input{
	    height: 40px;
	    font-size:14px;
	}
	.login-btn .btn{
		height:35px;
		font-size:14px;
	}
}
/*screen < max-width  屏幕宽度小于max-width*/
@media screen and (max-width: 1024px) { 
    .signinBg {
    	background: url(../../images/eeip/loginBgImg4.png) repeat left top;
		background-size: 40px;
	}
	.login-content{
	    /* padding-top: 40px; */
	}
	.logo-img{
		width: 40%;
	}
	.system-name p{
	    font-size: 20px;
	}
	.input-content span{
	    top: 51px;
	    font-size: 14px;
	}
	.input-content input{
	    height: 40px;
	    font-size:14px;
	}
	.login-btn .btn{
		height:35px;
		font-size:14px;
	}
}

.signinBg{
	background-color:#13152a;
	position: relative;
}
.login-content{
	width: 25%;
    margin: 0 37.5%;
    position: fixed;
    top: 50%;
    left: 0;
    margin-top: -323px;
}
.logo-img{
    margin: 0 auto;
}
.logo-img img{
	width:100%;
}
.system-name{
	padding: 15px 0;
}
.system-name p{
	text-align: center;
    color: #fff;
    letter-spacing: 3px;
}
.login-section{
	background: url(../../images/eeip/bgImg.png) no-repeat left top;
	background-size: 100% 100%;
	padding: 10px 10%;
	box-shadow: 0px 5px 5px 0px #101324;
}
.input-content{
	width: 100%;
    padding-top: 40px;
    position: relative;
}
.input-content span{
	position: absolute;
    left: 10px;
    color: #fff;
}
.input-content input{
	width: 100%;
    border: 1px solid rgba(255,255,255,0.3);
    border-radius: 4px;
    background-color: rgba(0,0,0,0);
    padding: 0 10px 0 60px;
    color: #fff;
}
.input-content input:focus{
	border: 1px solid rgba(255,255,255,1);
}
.operating-area{
	overflow: hidden;
    padding: 20px 0;
    color: #fff;
}
.operating-area > div{
	width:50%;
	float:left;
}
.remember label{
	color: #fff;
}
.forget{
	text-align: right;
}
.forget span{
	cursor: pointer;
}
.login-btn{
	text-align: center;
	padding-bottom: 30px;
}
.login-btn .btn{
	width: 50%;
	background-color:#47ae53;
	color: #fff;
}
.login-btn .btn i{
	margin-right:5px;
}

.ckbox input[type="checkbox"]:checked + label::after{
	top:2px;
}
.ckbox label:before{
	background-color:rgba(0,0,0,0);
}
.ckbox-primary input[type="checkbox"]:checked + label:before {
    border-color: #47ae53;
    background-color: #47ae53;
}
.username, .username:focus, .password, .password:focus{
	color:#fff;
}


/*-----------遮罩层-Start-----------*/
.bgDiv{
	position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* background-color: rgba(0,0,0,0.5); */
    z-index: 99;
    background-color: #000;
  	opacity: 0.8;
   }
.textDiv{
	position: fixed;
    top: 50%;
    left: 50%;
    width: 600px;
    height: 60px;
    margin-top:-30px;
    margin-left:-300px;
    background-color: #fff;
  	/* opacity: 0.5; */
    z-index: 100;
    color:#333;
    line-height: 60px;
  	text-align: center;
}
.hideDiv{
	display:none;
}
/*-----------遮罩层-End-----------*/