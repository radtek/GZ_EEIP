.timeline-content{
    width: 320px;
    margin: 0 auto;
    padding:20px 0;
}
.timeline-header{
    position: relative;
}
.header-icon{
    text-align: center;
    margin-bottom: 0px;
}
.header-icon i{
    color: #12b4a5;
    font-size: 40px;
    cursor: pointer;
}
.header-time{
    color:#12b4a5;
    text-align: center;
    margin-bottom: 5px; 
}
.list-btn{
    width: 60px;
    height: 60px;
    border: 4px solid #fff;
    border-radius: 50%;
    box-shadow: 0px 0px 0px 3px #12b4a5;
    background-color: #12b4a5;
    text-align: center;
    line-height: 46px;
    font-size: 50px;
    font-weight: bolder;
    margin: 0 auto;
    color: #fff;
    cursor: pointer;
    margin-bottom: 3px;
}
.header-add-content{
    position: absolute;
    top: 65px;
    left: 210px;
    width: 150px;
    background-color: #12b4a5;
    border-radius: 3px;
    z-index: 99;
    display: none;
}
.header-add-content:after{
    border-right: 6px solid #12b4a5;
    border-bottom: 6px solid transparent;
    border-top: 6px solid transparent;
    content: "";
    display: inline-block;
    left: -6px;
    position: absolute;
    top: 20px;
}
.header-add-content a{
    display: block;
    width: 100%;
    height: 34px;
    line-height: 34px;
    padding: 0 10px;
    color: #fff;
    cursor: pointer;
}
.header-add-content a:hover{
    color:#282e50;
}



.timeline-footer{
    width: 100px;
    height: 100px;
    margin: 0px auto;
    border-radius: 50%;
    background-color: #f9a34c;
    /* box-shadow: 0px 15px 0px 0px #f9d3ac; */
    position: relative;
    cursor: pointer;
}
.footer-line{
    position: absolute;
    top: -15px;
    left: 50%;
    width: 1px;
    height: 15px;
    background-color: #f9a34c;
}
.footer-icon{
    text-align: center;
    padding-top: 10px;
    position: relative;
    margin-bottom: 5px;
}
.footer-icon i{
    color:#fff;
    font-size: 36px;
}
.footer-icon span{
    text-align: center;
    position: absolute;
    top: 22px;
    left: 0;
    width: 100%;
    display: block;
    color:#fff;
    /* font-size: 16px; */
}
.footer-time{
    color:#fff;
    text-align: center;
    margin-bottom: 5px; 
}



.timeline-list{
    position: relative;
}
.time-point{
    width: 100%;
    height: 100px;
    position: relative;
}
.vertical-line{
    width: 1px;
    height: 100%;
    margin: 0 auto;
}
.point-content{
    width: 40px;
    height: 40px;
    background-color: #fff;
    position: absolute;
    top: 30px;
    left: 50%;
    margin-left: -20px;
    border-radius: 50%;
}
.point-content span{
    width: 18px;
    height: 18px;
    margin:11px auto;
    border-radius: 50%;
    display: block;
}
.status-name{
    text-align: center;
    font-weight: bold;
    font-size: 16px;
}
.status-time{
    text-align: center;
}



.page-point{
	height:120px;
}
.page-point .point-content{
	width: 60px;
    height: 60px;
    margin-left: -30px;
    overflow: hidden;
}
.btn.point-btn{
	width: 100%;
    height: 50%;
    background-color: rgba(0,0,0,0);
    border-radius: 0;
    color: #999;
    padding: 0;
    line-height: 29px;
}
.point-btn i{
	margin:0;
	font-size: 20px;
}
.point-btn:hover{
	background-color: rgba(204, 204, 204, 0.25);
	color:#444;
}


.horizontal-line{
    position: absolute;
    top: 50px;
    width: 140px;
    height: 1px;
}
.status-details{
    position: absolute;
    top: 10px;
    border-radius: 6px;
    width: 300px;
    padding: 10px 20px;
    min-height: 100px;
}
.corner-content{
    position: absolute;
    top: -1px;
    border-top: 6px solid #f9f9f9;
    width: 44px;
    height: 46px;
}
.corner-content span{
    width: 12px;
    height: 12px;
    border-radius: 50%;
    position: absolute;
}
.status-details p{
    margin-bottom: 0;
    line-height: 24px;
}



.list-right .horizontal-line{
    left: 180px;
}
.list-right .status-details{
    left: 100%;
}
.list-right .corner-content{
    left: -1px;
    border-left: 6px solid #f9f9f9;
}
.list-right .top-dot{
    top: -12px;
    right: 0;
}
.list-right .bottom-dot{
    left: -12px;
    bottom: 0;
}
.list-left .horizontal-line{
    right: 180px;
}
.list-left .status-details{
    right: 100%;
}
.list-left .corner-content{
    right: -1px;
    border-right: 6px solid #f9f9f9;
}
.list-left .top-dot{
    top: -12px;
    left: 0;
}
.list-left .bottom-dot{
    right: -12px;
    bottom: 0;
}



.status-use{
    color:#e7519b;
}
.status-use .vertical-line,
.status-use .point-content span,
.status-use .horizontal-line,
.status-use .corner-content span{
    background-color: #e7519b;
}
.status-use .point-content,
.status-use .status-details{
    border: 1px solid #e7519b;
}

.status-upgrade{
    color:#722671;
}
.status-upgrade .vertical-line,
.status-upgrade .point-content span,
.status-upgrade .horizontal-line,
.status-upgrade .corner-content span{
    background-color: #722671;
}
.status-upgrade .point-content,
.status-upgrade .status-details{
    border: 1px solid #722671;
}

.status-maintain{
    color:#777bbb;
}
.status-maintain .vertical-line,
.status-maintain .point-content span,
.status-maintain .horizontal-line,
.status-maintain .corner-content span{
    background-color: #777bbb;
}
.status-maintain .point-content,
.status-maintain .status-details{
    border: 1px solid #777bbb;
}

.status-inspect{
    color:#245dae;
}
.status-inspect .vertical-line,
.status-inspect .point-content span,
.status-inspect .horizontal-line,
.status-inspect .corner-content span{
    background-color: #245dae;
}
.status-inspect .point-content,
.status-inspect .status-details{
    border: 1px solid #245dae;
}