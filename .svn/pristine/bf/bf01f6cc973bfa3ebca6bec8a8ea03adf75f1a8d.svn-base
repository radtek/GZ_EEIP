.main-content{
    width: 100%;
    position: relative;
}
/*-----------左侧栏-Start-----------*/
.left-nav{
    width: 192px;
    position: absolute;
    top: 0;
    left: 0;
    border-right: 1px solid #d4d7df;
    border-left: 1px solid #eef1fa;
    background-color: #fff;
}
.left-nav li{
    border-bottom: 1px solid #dce3f3;
    position: relative;
}
.left-nav li a{
    cursor: pointer;
    width: 100%;
    height: 40px;
    line-height: 40px;
    display: block;
    text-align: center;
    color: #282e50;
    /* font-size: 16px; */
}
.left-nav .action a, .left-nav li:hover a{
    background-color: #282e50;
    color:#fff;
}
.left-nav .action a:after, .left-nav li:hover a:after{
    border-left: 6px solid #282e50;
    border-bottom: 6px solid transparent;
    border-top: 6px solid transparent;
    content: "";
    display: inline-block;
    right: -6px;
    position: absolute;
    top: 15px;
}
/*-----------左侧栏-End-----------*/



/*-----------右表单-Start-----------*/
.right-form{
    padding-left:190px;
    background-color: #fff;
    border-left: 1px solid #eef1fa;
    min-height:410px;
}
.right-content{
    border-left: 1px solid #d4d7df;
    width: 100%;
}
.form-content label{
	color:#999;
}
/*-----------右表单-End-----------*/