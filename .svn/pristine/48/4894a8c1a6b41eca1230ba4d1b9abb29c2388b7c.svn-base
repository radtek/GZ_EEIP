<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		 xmlns="http://java.sun.com/xml/ns/javaee" 
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
		 id="WebApp_ID" version="2.5">
  
  <!--Electronic Evidence Identification Platform -->
  <display-name>EEIP</display-name>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- Error Page Configuration -->
  <error-page>
    <error-code>404</error-code>
    <location>/common/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/common/403.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/common/500.jsp</location>
  </error-page>
  
  <!-- Session Timeout Configuration -->
  <session-config>
    <session-timeout>240</session-timeout>
  </session-config>
  
  <!-- The contextConfigLocation param is used in conjunction with this Spring listener org.springframework.web.context.ContextLoaderListener -->  
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:applicationContext.xml</param-value>
  </context-param>
  
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  
  <!-- Hibernate Open Session In View Configuration -->
  <filter>
    <filter-name>openSessionInViewFilter</filter-name>
    <filter-class>org.springframework.orm.hibernate4.support.OpenSessionInViewFilter</filter-class>
    <init-param>
      <param-name>singleSession</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  
  <!-- Sign-in Filter Configuration -->
  <filter>
    <filter-name>SignInFilter</filter-name>
    <filter-class>org.pangolin.eeip.web.filter.SignInFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SignInFilter</filter-name>
    <url-pattern>/index.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SignInFilter</filter-name>
    <url-pattern>/system/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SignInFilter</filter-name>
    <url-pattern>/operation/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SignInFilter</filter-name>
    <url-pattern>/asset/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SignInFilter</filter-name>
    <url-pattern>/analysis/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SignInFilter</filter-name>
    <url-pattern>/mobile/homepage.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SignInFilter</filter-name>
    <url-pattern>/mobile/operation/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SignInFilter</filter-name>
    <url-pattern>/mobile/asset/*</url-pattern>
  </filter-mapping>
  
  <!-- Spring MVC Configuration -->
  <servlet>
  	<servlet-name>SpringDispatcherServlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
    	<param-name>contextConfigLocation</param-name>
        <param-value>classpath:spring-servlet.xml</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
  	<servlet-name>SpringDispatcherServlet</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  
  <!-- Servlet Context Init Loader Configuration -->
  <servlet>
    <servlet-name>ServletContextInitLoader</servlet-name>
	<servlet-class>org.pangolin.servlet.InitServletContext</servlet-class>
	<load-on-startup>1</load-on-startup>
  </servlet >
  
  <!-- System Language Init Loader Configuration -->
  <servlet>
    <servlet-name>LocaleLoaderServlet</servlet-name>
	<servlet-class>org.pangolin.eeip.language.LocaleLoader</servlet-class>
	<load-on-startup>1</load-on-startup>
  </servlet>
  
  <!-- Web Service URL Loader Configuration -->
  <servlet>
    <servlet-name>WebServiceUrlLoader</servlet-name>
	<servlet-class>org.pangolin.eeip.web.servlet.WebServiceUrlLoader</servlet-class>
	<load-on-startup>1</load-on-startup> 
  </servlet >
  
  <!-- Navigations Loader Configuration -->
  <servlet>
    <servlet-name>NavigationLoader</servlet-name>
	<servlet-class>org.pangolin.eeip.web.servlet.NavigationLoader</servlet-class>
	<load-on-startup>1</load-on-startup> 
  </servlet >
  
  <!-- Initialize System Data -->
  <servlet>
    <servlet-name>InitSystemDataServlet</servlet-name>
	<servlet-class>org.pangolin.eeip.security.InitSystemDataServlet</servlet-class>
	<load-on-startup>1</load-on-startup>
  </servlet >
  
  <!-- Axis 2 Configuration -->
  <servlet>
    <servlet-name>AxisServlet</servlet-name>
	<servlet-class>org.apache.axis2.transport.http.AxisServlet</servlet-class>
	<load-on-startup>1</load-on-startup> 
  </servlet >
  <servlet-mapping>
    <servlet-name>AxisServlet</servlet-name>
	<url-pattern>/services/*</url-pattern>
  </servlet-mapping>
  
  <!-- System Login Servlet Configuration -->
  <servlet>
    <servlet-name>SignInServlet</servlet-name>
    <servlet-class>org.pangolin.eeip.security.SignInServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignInServlet</servlet-name>
    <url-pattern>/signin.action</url-pattern>
  </servlet-mapping>
  
  <!-- System Logout Servlet Configuration -->
  <servlet>
    <servlet-name>SignOutServlet</servlet-name>
    <servlet-class>org.pangolin.eeip.security.SignOutServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignOutServlet</servlet-name>
    <url-pattern>/signout.action</url-pattern>
  </servlet-mapping>
  
  <!-- ServiceTicket Servlet Configuration -->
  <servlet>
    <servlet-name>ServiceTicketServlet</servlet-name>
    <servlet-class>org.pangolin.eeip.security.ServiceTicketServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServiceTicketServlet</servlet-name>
    <url-pattern>/serviceticket.action</url-pattern>
  </servlet-mapping>
  
  <!-- JSTL Configuration -->
  <jsp-config>
    <taglib>
      <taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
      <taglib-location>/WEB-INF/tld/c.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>http://java.sun.com/jsp/jstl/fmt</taglib-uri>
      <taglib-location>/WEB-INF/tld/fmt.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>http://java.sun.com/jsp/jstl/sql</taglib-uri>
      <taglib-location>/WEB-INF/tld/sql.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>http://java.sun.com/jsp/jstl/xml</taglib-uri>
      <taglib-location>/WEB-INF/tld/x.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>http://www.pangolin.org/auth</taglib-uri>
      <taglib-location>/WEB-INF/tld/sysauth.tld</taglib-location>
    </taglib>
  </jsp-config>
  
</web-app>