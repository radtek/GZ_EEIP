/*-----------视频录像-Start-----------*/
.video-title{
	text-align: center;
}

.video-content{
    width: 100%;
    height: 510px;
    text-align: center;
}
/*-----------视频录像-End-----------*/



/*-----------遮罩层-Start-----------*/
.bgDiv{
	position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* background-color: rgba(0,0,0,0.5); */
    z-index: 99;
    background-color: #000;
  	opacity: 0.8;
   }
.textDiv{
	position: fixed;
    top: 50%;
    left: 50%;
    width: 600px;
    height: 60px;
    margin-top:-30px;
    margin-left:-300px;
    background-color: #fff;
  	/* opacity: 0.5; */
    z-index: 100;
    color:#333;
    line-height: 60px;
  	text-align: center;
}
.hideDiv{
	display:none;
}
/*-----------遮罩层-End-----------*/



/*-----------兼容模式-Start-----------*/
body{
    background-color: #fff;
    width: 100%;
    margin: 0 auto;
}
/*-----------兼容模式-End-----------*/