}

.select_content {
	margin: 5px 0;
	width: 100%;
	min-height: 1px;
}

.user_left {
	width: 20%;
	float: left;
	margin-top: 5px;
	/* border-right: 1px solid #e4e7ea; */
	/* padding-left: 20px; */
	padding-right: 5px;
}

.user_right {
	width: 80%;
	float: right;
}

.sansan {
	float: left;
