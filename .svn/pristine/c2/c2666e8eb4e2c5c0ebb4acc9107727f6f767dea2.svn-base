body{font-size:62.5%;}
.bigdiv{width:100%;height:100%;position:absolute;}
.left{width:70%;height:100%;background:url("../images/bg.jpg") center no-repeat #4b98dc;float:left;position:relative;background-size:100% 100%;}
.left_title{width:80%;height:314px;position:absolute;top:50%;left:50%;}
.left_title img{width:100%;height:100%;}
.right{width:30%;height:100%;position:relative;}
.login{width:90%;height:200px;top:50%;left:50%;margin-top:-100px;position:absolute;}
.login_div{width:100%;border:1px solid #4b98dc;height:40px;margin-bottom:30px;}
.login_left{height:40px;width:10%;float:left;position:relative;}
.login_left span{position:absolute;top:10px;left:10px;color:#4b98dc;font-size:18px;}
.login_right{height:40px;width:90%;float:right;}
.login_right input{width:100%;height:38px;border:0px;line-height:38px;font-size:14px;}
.login_button{width:40%;float:left;background-color:#336fdd;height:40px;text-align:center;font-size:2em;color:#fff;line-height:40px;cursor:pointer;}